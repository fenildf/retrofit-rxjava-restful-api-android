<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tpcreative.co.retrofit_rxjava_restfulapi_android">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".TPApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".user.SigninActivity"
            android:screenOrientation="portrait"
            android:label="@string/lbSignInPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/lbHomePage"/>
        <activity android:name=".user.SignupActivity"
            android:screenOrientation="portrait"
            android:label="@string/lbSignUp"></activity>
    </application>

</manifest>